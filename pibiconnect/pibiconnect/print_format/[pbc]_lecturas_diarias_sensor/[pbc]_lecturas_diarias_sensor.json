 "html": "<!DOCTYPE html>\n<html>\n<head>\n    <meta charset=\"utf-8\">\n    <style>\n        @media print {\n            @page {\n                size: A4;\n                margin: 1cm;\n            }\n        }\n        \n        body {\n            font-family: -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif;\n            font-size: 9pt;\n            line-height: 1;\n            color: #333;\n        }\n        \n        .header {\n            border-bottom: 1px solid #ddd;\n            padding-bottom: 3px;\n            margin-bottom: 3px;\n        }\n        \n        .header-info {\n            display: grid;\n            grid-template-columns: 1fr 1fr;\n            gap: 6px;\n        }\n        \n        .header-item {\n            margin-bottom: 3px;\n        }\n        \n        .charts-section {\n            display: grid;\n            grid-template-columns: 1fr 1fr;\n            gap: 6px;\n            margin-bottom: 3px;\n            page-break-inside: avoid;\n        }\n        \n        .chart-container {\n            border: 1px solid #ddd;\n            padding: 3px;\n            background: #fff;\n        }\n        \n        .chart-container img {\n            width: 100%;\n            height: auto;\n        }\n        \n        .logs-table {\n            width: 100%;\n            border-collapse: collapse;\n            margin-top: 6px;\n            page-break-inside: auto;\n            padding: 0;\n            line-height: 1;\n        }\n        \n        .logs-table th,\n        .logs-table td {\n            border: 1px solid #ddd;\n            padding: 3px;\n            text-align: left;\n            font-size: 9pt;\n        }\n        \n        .logs-table th {\n            background-color: #f5f5f5;\n            font-weight: bold;\n        }\n        \n        .logs-table tr {\n            page-break-inside: avoid;\n        }\n        \n        .section-title {\n            font-size: 12pt;\n            font-weight: bold;\n            margin: 6px 0 3px;\n            color: #2c5282;\n        }\n\n        .print-timestamp {\n            font-size: 8pt;\n            color: #666;\n            text-align: right;\n            margin-top: 6px;\n        }\n        .print-format td {\n          padding: 3px !important;\n        }\n    </style>\n</head>\n<body>\n    <div class=\"header\">\n        <div class=\"header-info\">\n            <div>\n                <div class=\"header-item\"><strong>Sensor:</strong> {{ doc.device }}</div>\n                <div class=\"header-item\"><strong>Fecha:</strong> {{ frappe.format(doc.date, 'Date') }}</div>\n            </div>\n            <div>\n                <div class=\"header-item\"><strong>Registro:</strong> {{ doc.name }}</div>\n            </div>\n        </div>\n    </div>\n\n    {% if doc.main_pic or doc.second_pic %}\n    <div class=\"section-title\">Gr\u00e1ficos</div>\n    <div class=\"charts-section\">\n        {% if doc.main_pic %}\n        <div class=\"chart-container\">\n            <img src=\"{{ doc.main_pic }}\" alt=\"Gr\u00e1fico Principal\">\n        </div>\n        {% endif %}\n        \n        {% if doc.second_pic %}\n        <div class=\"chart-container\">\n            <img src=\"{{ doc.second_pic }}\" alt=\"Gr\u00e1fico Secundario\">\n        </div>\n        {% endif %}\n    </div>\n    {% endif %}\n\n    {% if doc.log_item %}\n    <div class=\"section-title\">Registros</div>\n    <table class=\"logs-table\">\n        <thead>\n            <tr>\n                <th>ID</th>\n                <th>Variable</th>\n                <th>Valor</th>\n                <th>UdM</th>\n                <th>Fecha y Hora</th>\n                <!--<th>Chart Type</th>-->\n            </tr>\n        </thead>\n        <tbody>\n            {% for item in doc.log_item %}\n            <tr>\n                <td>{{ item.idx }}</td>\n                <td>{{ item.sensor_var }}</td>\n                <td>{{ item.value }}</td>\n                <td>{{ item.uom }}</td>\n                <td>{{ frappe.format(item.data_date, 'Datetime') }}</td>\n                <!--<td>{{ item.chart_type }}</td>-->\n            </tr>\n            {% endfor %}\n        </tbody>\n    </table>\n    {% endif %}\n\n    <div class=\"print-timestamp\">\n        Printed on {{ frappe.format(frappe.utils.now(), 'Datetime') }}\n    </div>\n</body>\n</html>",
